generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Student {
  id        String   @id @default(cuid())
  name      String
  wallet    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  certificates Certificate[]
}

model Institution {
  id          String   @id @default(cuid())
  name        String
  wallet      String   @unique
  description String
  contact     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  certificateCollection CertificateCollection[]
}

model CertificateCollection {
  id            String   @id @default(cuid())
  address       String   @unique
  name          String
  description   String
  institutionId String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  institution  Institution   @relation(fields: [institutionId], references: [id])
  certificates Certificate[]
}

model Certificate {
  id           String   @id @default(cuid())
  studentId    String
  collectionId String
  name         String
  tokenId      BigInt   @unique
  tokenUri     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  student    Student               @relation(fields: [studentId], references: [id])
  collection CertificateCollection @relation(fields: [collectionId], references: [id])
}

model JobVacancy {
  id              String   @id @default(cuid())
  companyName     String
  position        String
  category        Category
  jobDescription  String[]
  jobRequirements String[]
  location        String
  type            Type
  salary          String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

enum Category {
  Technology
  Business
  Health
  Education
  Entertainment
}

enum Type {
  FullTime
  PartTime
}
